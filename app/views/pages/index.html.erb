<h1>All Pages | <%= link_to 'Add New Page', new_page_path, {class: 'btn btn-primary'} %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Page ID</th>
      <th>Title</th>
      <th class="text-center">Published</th>
      <th>Date Created</th>
      <th>Last Modified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.id %></td>
        <td><span class="glyphicon glyphicon-edit"></span> <%= link_to page.title, edit_page_path(page) %></td>
        <td class="text-center"><span class="glyphicon glyphicon-<%= page.published ? 'ok-sign text-success' : 'remove-sign text-danger' %>"></span></td>
        <td><%= page.created_at.strftime("%d %b %Y") %></td>
        <td><%= page.updated_at .strftime("%d %b %Y") %></td>
        <td><span class="glyphicon glyphicon-share"></span> <%= link_to 'View Page', page %></td>
        <td><span class="glyphicon glyphicon-edit"></span> <%= link_to 'Edit Page', edit_page_path(page) %></td>
        <td><span class="glyphicon glyphicon-trash"></span> <%= link_to 'Delete Page', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

